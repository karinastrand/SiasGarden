@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-success-subtle bg-gradient m-lg-0 py-2">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-success-emphasis">Ta bort kategori</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <input asp-for="Id" type="hidden" />
                <div class="form-floating py-2 col-12">

                    <input asp-for="Name" disabled class="form-control border-1" />
                    <label asp-for="Name" class="mt-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Description" disabled class="form-control border-1" />
                    <label asp-for="Description" class="mt-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="DisplayOrder" disabled class="form-control border-1" />
                    <label asp-for="DisplayOrder" class="mt-2"></label>
                </div>
                <div class="row mt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Ta bort</button>

                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-info form-control">Tillbaka till listan</a>
                    </div>
                </div>

            </div>

        </form>
    </div>
</div>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />

    }
}