@model List<SubCategory>

<div class="card shadow border-0 mt-4">

    <div class=" card-header bg-success-subtle bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-success-emphasis py-2">Underkategorier</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="SubCategory" asp-action="Upsert" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i>
                    Ny underkategori
                </a>
            </div>
        </div>

        <table class="table table-borded  table-striped table-light">
            <thead>
                <tr>
                    <th class="text-success-emphasis" style="width:20%">
                        Namn
                    </th>
                    <th class="text-success-emphasis" style="width:40%">
                        Beskrivning
                    </th>
                   
                    <th class="text-success-emphasis" style="width:35%">
                       
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderBy(u=>u.Name))
                {
                    <tr>
                        <td class="text-success-emphasis">@item.Name</td>
                        <td class="text-success-emphasis">@item.Description</td>
                        <td>
                            <div class="w-75 btn-group" role=" group">
                                <a asp-controller="SubCategory" asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-success mx-2">
                                    <i class="bi bi-pencil-square"></i> Redigera
                                </a>
                                <a asp-controller="SubCategory" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Ta bort
                                </a>
                            </div>
                        </td>
                    </tr>
                }
        
            </tbody>
    
        </table>
    </div>
</div>