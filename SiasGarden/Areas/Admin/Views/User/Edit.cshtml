@model UserVM

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-success bg-gradient m-lg-0 py-2">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white">Redigera användare</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="@Model.ApplicationUser.Id" hidden />
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        <div class="form-floating py-2 col-12">
                            <input asp-for="@Model.ApplicationUser.Email" readonly class="form-control border-1 " />
                            <label asp-for="@Model.ApplicationUser.Email" class="mt-2 ">Användarnamn/Email</label>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="@Model.ApplicationUser.FirstName" class="form-control border-1 " />
                            <label asp-for="@Model.ApplicationUser.FirstName" class="mt-2 "></label>
                            <span asp-validation-for="@Model.ApplicationUser.FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="@Model.ApplicationUser.LastName" class="form-control border-1 " />
                            <label asp-for="@Model.ApplicationUser.LastName" class="mt-2 "></label>
                            <span asp-validation-for="@Model.ApplicationUser.LastName" class="text-danger"></span>
                        </div>
                         <div class="form-floating py-2 col-12">
                            <input asp-for="@Model.ApplicationUser.PhoneNumber" class="form-control border-1 " />
                            <label asp-for="@Model.ApplicationUser.PhoneNumber" class="mt-2 ">Telefon</label>
                            <span asp-validation-for="@Model.ApplicationUser.PhoneNumber" class="text-danger"></span>
                        </div>
                         
                         <div class="form-floating py-2 col-12">
                            <input asp-for="@Model.ApplicationUser.StreetAddress" class="form-control border-1 " />
                            <label asp-for="@Model.ApplicationUser.StreetAddress" class="mt-2 "></label>
                            <span asp-validation-for="@Model.ApplicationUser.StreetAddress" class="text-danger"></span>
                        </div>
                         <div class="form-floating py-2 col-12">
                            <input asp-for="@Model.ApplicationUser.PostalCode" class="form-control border-1 " />
                            <label asp-for="@Model.ApplicationUser.PostalCode" class="mt-2 "></label>
                            <span asp-validation-for="@Model.ApplicationUser.PostalCode" class="text-danger"></span>
                        </div>
                         <div class="form-floating py-2 col-12">
                            <input asp-for="@Model.ApplicationUser.City" class="form-control border-1 " />
                            <label asp-for="@Model.ApplicationUser.City" class="mt-2 "></label>
                            <span asp-validation-for="@Model.ApplicationUser.City" class="text-danger"></span>
                        </div>
                      
                        <div class="form-floating py-2 col-12">
                            <select asp-for="@Model.ApplicationUser.Role" asp-items="@Model.RoleList" class="form-select border-1">
                                <option value="@Model.ApplicationUser.Role">@Model.ApplicationUser.Role</option>
                            </select>
                            <label asp-for="@Model.ApplicationUser.Role" class="mt-2 ">Roll</label>
                        </div>
                        <div class="row mt-3">
                            <div class="col-6 col-md-3">
                                
                                    <button type="submit" class="btn btn-success form-control">Uppdatera</button>
                    
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="User" asp-action="Index" class="btn btn-info form-control">Tillbaka till listan</a>

                            </div>
                        </div>

                    </div>
                </div>
                
            </div>


        </form>
    </div>
</div>


@section Scripts {
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons lists  table visualblocks wordcount linkchecker',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | table | align lineheight | numlist bullist indent outdent | emoticons charmap ',

        });
    </script>
    @{
        <partial name="_ValidationScriptsPartial" />

    }
}