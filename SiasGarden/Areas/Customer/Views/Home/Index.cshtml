@model IEnumerable<Product>
<div class="row pb-3 mb-4">
    @foreach(var product in Model)
    {
        <div class="col-lg-3 col-sm-6 mb-">
            <div class="row p-0">
                <div class="col-12 p-1">
                    <div class="card border-0 p-2 shadow border-top border-5 rounded ">
                        @if(product.ProductImages!=null && product.ProductImages.Count()>0)
                        {
                            <img src="@product.ProductImages.FirstOrDefault().ImageUrl" class="card-img-top rounded"/>
                        }
                        else
                        {
                            <img src="https://placehold.co/500x600/png" class="card-img-top rounded" />
                        }

                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h6 text-dark  text-uppercase text-center">@product.Name</p>
                            </div>
                            <div class="pl-1">
                                <p class="text-dark  text-center lh-1">@product.Price.ToString("c")</p>
                                <p class="text-dark  text-center lh-1">@product.SubCategory.Name</p>
                            </div>
                        </div>
                        <div>
                            <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-productId="@product.Id" class="btn btn-success  bg-gradient border-0 rounded form-control">
                                Detaljer
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>      
    }
    <div class="mb-5">
    <br />

    </div>
</div>