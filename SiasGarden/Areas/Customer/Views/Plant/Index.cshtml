@model ProductVM2

<div class="container">
    <div class="mt-3 mb-3">
        <div class="text-center fs-3  text-primary">Våra växter</div>
        <div class="row">
            <div class="col-sm-2">
                <ul class="nav nav-pills flex-column ">
                    <li class="nav-item">
                        @if (Model.SelectedCategory == "Alla" || (string.IsNullOrEmpty(Model.SelectedCategory)))
                        {
                            <a class="nav-link  active rounded bg-success" asp-action="Index" asp-route-selectedCategory="Alla">Alla</a>

                        }
                        else
                        {
                            <a class="nav-link " asp-action="Index" asp-route-selectedCategory="Alla">Alla</a>
                        }
                    </li>
                    @foreach (var item in Model.Categorys)
                    {
                        <li class="nav-item">
                            @if (Model.SelectedCategory == item.Name)
                            {
                                <a class="nav-link active rounded bg-success" asp-action="Index" asp-route-selectedCategory="@item.Name">@item.Name</a>

                            }
                            else
                            {
                                <a class="nav-link " asp-action="Index" asp-route-selectedCategory="@item.Name">@item.Name</a>
                            }
                        </li>
                    }

                </ul>

            </div>



            <div class="col-10 ml-3">
                <div class="row pb-3 mb-4 ">
                    @foreach (var item in Model.Products)
                    {

                        <div class="col-lg-3 col-sm-6">
                            <div class="row">
                                <div class="col-12 p-1">
                                    <div class="card border-0 p-2 shadow border-top border-5 rounded ">
                                        @if (item.ProductImages != null && item.ProductImages.Count() > 0)
                                        {
                                            <img src="@item.ProductImages.FirstOrDefault().ImageUrl" class="card-img-top rounded" />
                                        }
                                        else
                                        {
                                            <img src="https://placehold.co/500x600/png" class="card-img-top rounded" />
                                        }

                                        <div class="card-body pb-0">
                                            <div class="pl-1">
                                                <h6 class="card-title  text-dark fs-6 fw-bold text-uppercase text-center">@item.Name</h6>
                                                <h6></h6>
                                            </div>
                                            <div class="pl-1">
                                                <p class="text-dark fs-6 text-center lh-1" >@item.SubCategory.Name</p>
                                                <p class="text-dark fs-6 text-center lh-1" >@item.Price.ToString("c")</p>
                                                
                                            </div>
                                        </div>
                                        <div>
                                            <a asp-area="Customer" asp-controller="Plant" asp-action="Details" asp-route-productId="@item.Id" class="btn btn-success  bg-gradient border-0 rounded form-control">
                                                Detaljer
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    }
                    <div class="mb-5">
                        <br />

                    </div>
                </div>

            </div>
        </div>

    </div>


</div>
