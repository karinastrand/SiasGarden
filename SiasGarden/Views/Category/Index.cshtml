@model List<Category>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-success" >Kategorier</h2>
        </div>
        <div class="col-6 text-end pb-2">
            <a asp-controller="Category" asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Ny Kategori
            </a>
        </div>
    </div>
</div>

<table class="table table-borded table-striped">
    <thead>
        <tr>
            <th style="width:20%">
                Name
            </th>
            <th style="width:40%">
                Description
            </th>
            <th style="width:5%">
                Display Order
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderBy(u=>u.DisplayOrder))
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.DisplayOrder</td>
                <td>
                    <div class="w-75 btn-group" role=" group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success mx-2">
                            <i class="bi bi-pencil-square"></i> Redigera
                        </a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i> Ta bort
                        </a>
                    </div>
                </td>
            </tr>
        }
        
    </tbody>
    
</table>